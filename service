def fetch_info():
    info = api.device_info.get()
    print >>sys.stderr, info
    node['/device_info'](dict(
        description = info['description'],
        location = info['location'],
    ))
    # detail_page_qr.update_img(info['detail_url'])

if __name__ == "__main__":
    interval = 10
    while 1:
        try:
            fetch_info()
            interval = 60
        except:
            traceback.print_exc()
            interval = 30
        finally:
            time.sleep(interval)

